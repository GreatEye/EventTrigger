<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="cn.appleye.demo.DemoActivity">

    <TextView
        android:id="@+id/network_trigger_view"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:padding="5dip"
        android:gravity="center"
        android:text="Network Trigger Demo"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/round_rect_bg"/>

    <TextView
        android:id="@+id/timer_trigger_view"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:padding="5dip"
        android:gravity="center"
        android:text="Timer Trigger Demo"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/round_rect_bg"/>

</LinearLayout>
